{% extends 'base.html.twig' %}

{% block title %}Les articles{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	{{ encore_entry_link_tags ( 'article' ) }}
        
{% endblock %}

{% block article %}
    <h1 id="titreArticle" >Les articles</h1>

    <a id="creerArticle" href="{{ path('article_new') }}">Créer un article</a>

    <div class=" table-responsive">
        <table class="table table-bordered table-hover table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Date_parution</th>
                    <th>Publie</th>
                    <th>action</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody id="bodyArticleTable" >
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.image }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.contenu }}</td>
                    <td>{{ article.dateParution ? article.dateParution|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ article.publie ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a><br>
                    </td>
                    <td>
                        <a href="{{ path('article_edit', {'id': article.id}) }}">Éditer</a>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Désolé, je n'ai pas trouvé l'article</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Date_parution</th>
                    <th>Publie</th>
                    <th>action</th>
                    <th>action</th>

                </tr>
            </tfoot>
        </table>
    </div>


{% endblock article %}

{% block javascripts %}

    {{ parent() }}       
    {{ encore_entry_script_tags ( 'article' ) }}

{% endblock %}
