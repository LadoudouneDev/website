{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block article %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Date_parution</th>
                <td>{{ article.dateParution ? article.dateParution|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Publie</th>
                <td>{{ article.publie ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour à la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">Éditer</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
